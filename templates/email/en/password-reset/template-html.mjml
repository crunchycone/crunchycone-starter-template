<!-- Description: Password reset email for forgot password flow -->
<mjml>
  <mj-head>
    <mj-title>Reset your password</mj-title>
    <mj-preview>You requested to reset your password</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Helvetica Neue', Arial, sans-serif" />
      <mj-text color="#333333" font-size="16px" line-height="24px" />
      <mj-section background-color="#ffffff" />
    </mj-attributes>
    <mj-style inline="inline">
      .brand-primary {
        color: #000000 !important;
      }
      .text-muted {
        color: #666666 !important;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f5f5f5">
    <!-- Header -->
    <mj-section background-color="#000000" padding="20px 0">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="24px" font-weight="bold">
          {{ appName }}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text
          font-size="28px"
          font-weight="bold"
          color="#000000"
          align="center"
          padding-bottom="20px"
        >
          Reset Your Password
        </mj-text>

        <mj-text font-size="16px" color="#333333" line-height="24px" padding-bottom="30px">
          You requested to reset your password. Click the button below to create a new password for
          your {{ appName }} account.
        </mj-text>

        <mj-button
          href="{{ resetUrl }}"
          background-color="#000000"
          color="#ffffff"
          font-size="16px"
          font-weight="bold"
          border-radius="6px"
          padding="15px 30px"
          align="center"
        >
          Reset Password
        </mj-button>

        <mj-text font-size="14px" color="#666666" line-height="20px" padding-top="30px">
          If you're having trouble clicking the button, copy and paste this link into your browser:
        </mj-text>

        <mj-text font-size="14px" color="#0066cc" line-height="20px" padding-top="10px">
          <a href="{{ resetUrl }}" style="color: #0066cc; word-break: break-all">{{ resetUrl }}</a>
        </mj-text>

        <mj-divider border-color="#eeeeee" border-width="1px" padding="30px 0" />

        <mj-text font-size="14px" color="#666666" line-height="20px">
          This link will expire in {{ expiryHours }} hour{% if expiryHours != 1 %}s{% endif %}. If
          you didn't request a password reset, you can safely ignore this email.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#f5f5f5" padding="30px">
      <mj-column>
        <mj-text align="center" font-size="14px" color="#666666" line-height="20px">
          Questions? Contact us at
          <a href="mailto:{{ supportEmail }}" style="color: #0066cc">{{ supportEmail }}</a>
        </mj-text>
        <mj-text
          align="center"
          font-size="12px"
          color="#999999"
          line-height="18px"
          padding-top="10px"
        >
          Â© {{ "now" | date: "%Y" }} {{ appName }}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
